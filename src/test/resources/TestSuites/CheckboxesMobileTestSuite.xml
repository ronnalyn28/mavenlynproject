<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="CheckboxesMobileTestSuite.xml" verbose="1">
	<test name="CheckboxesTest-Android">
		<parameter name="deviceName" value="Pixel 2 XL"/>
    	<classes>
			<class name="com.herokuapp.theinternet.CheckboxTests">
			<methods>
				<include name="selectAllCheckboxesTest"/>
			</methods>
			</class>
		</classes>
 	</test>
 	
 	<test name="CheckboxesTest-iOS">
		<parameter name="deviceName" value="iPhone XR"/>
    	<classes>
			<class name="com.herokuapp.theinternet.CheckboxTests">
			<methods>
				<include name="selectOneCheckboxTest"/>
			</methods>
			</class>
		</classes>
 	</test>
 	
</suite>