<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="DropdownTestSuiteHeadless.xml" verbose="1">

	<test name="DropdownTests-CH">
		<parameter name="Browser" value="ChromeHeadless" />
		<classes>
			<class name="com.herokuapp.theinternet.DropdownTests">
				<methods>
					<include name="selectOptionTwoTest" />
				</methods>
			</class>
		</classes>
	</test>

	<test name="DropdownTests-FF">
		<parameter name="Browser" value="FirefoxHeadless" />
		<classes>
			<class name="com.herokuapp.theinternet.DropdownTests" />
		</classes>
	</test>

	<test name="DropdownTests-PH">
		<parameter name="Browser" value="PhantomJS" />
		<classes>
			<class name="com.herokuapp.theinternet.DropdownTests" />
		</classes>
	</test>

	<test name="DropdownTests-UN">
		<parameter name="Browser" value="HtmlUnit" />
		<classes>
			<class name="com.herokuapp.theinternet.DropdownTests" />
		</classes>
	</test>

</suite>